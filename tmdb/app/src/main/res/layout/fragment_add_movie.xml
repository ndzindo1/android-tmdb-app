<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple"
    tools:context=".ui.addmovie.AddMovieFragment">

    <ImageView
        android:id="@+id/image_view_cover"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/button_add_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view_cover"
        android:layout_alignStart="@id/image_view_cover"
        android:layout_alignEnd="@id/image_view_cover"
        android:text="@string/add_cover"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/image_view_cover"
        android:backgroundTint="@color/white"
        android:hint="@string/title"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/light_gray" />

    <EditText
        android:id="@+id/edit_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/image_view_cover"
        android:backgroundTint="@color/white"
        android:hint="@string/description"
        android:inputType="textMultiLine"
        android:textColor="@color/white"
        android:textColorHint="@color/light_gray"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button_add_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="@string/add_movie"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>